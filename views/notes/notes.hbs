<div class="container">

    <div class="top">
        <a class="btn btn-success" href="/newnote">Add+</a>
    </div>

    <div class="note-div">
        {{#each notes}}
        <div class="card-body"
            style="width: 90%; max-height: 10rem; overflow-y: hidden; padding: 5px; margin: 10px; ">

            <a href="/note/{{this._id}}">
                <div class="card-body1">
                    <h5 class="card-title">{{this.title}}</h5>
                </div>
            </a>
        <a class="delete btn btn-danger" href="/delete/{{this._id}}">D</a>
        </div>
        {{/each}}
    </div>

    <style>
        .delete{
            color: black;
            position: absolute;
            right: 10%;
            color: white;
            border-radius: 0;
            font-weight: 800;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }
        .card-body1 {
            height: 28px;
        }

        .card-body {
            align-items: center;
            display: flex;
            justify-content: center;
            background-color: white;

        }

        .card-title {
            color: black;
        }

        .note-div {
            margin-top: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .top {
            position: fixed;
            top: 60px;
            right: 10px;
        }

        .top a {
            font-family: Arial, sans-serif;
            font-weight: 600;
        }
    </style>